<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Games</title>
  <link rel="stylesheet" href="/css/games.css" />
</head>
<body>
  <header class="site-header">
    <nav class="nav">
      <ul>
        <li><a href="/">HOME <sub>(01)</sub></a></li>
    
        <!-- NOTE: route to games page -->
        <li><a href="/games" class="active">GAMES <sub>(05)</sub></a></li>
      </ul>
    </nav>
  </header>

  <!-- main area: grid will fill remaining viewport height -->
  <main class="games-main">
    <div class="games-grid">
      <% games.forEach(game => { %>
        <!-- wrap entire card in anchor so whole box is clickable -->
        <a class="game-card" href="<%= game.link %>" target="_blank" rel="noopener noreferrer" aria-label="Play <%= game.title %>">
          <div class="card-media">
            <img src="<%= game.img %>" alt="<%= game.title %> screenshot" />
            <div class="overlay">
              <span class="play-text">Play</span>
            </div>
          </div>
          <div class="card-footer">
            <h2><%= game.title %></h2>
          </div>
        </a>
      <% }) %>
    </div>
  </main>
</body>
</html>
